{
	"name": "Tilted Home",
	"author": "TheRensei",
	"target": "Home",
	"version": "v1.0",
	"description": "Tilted home view portraits",
	"manifest_version": 5,
	"inject": {
		"shared.css": [
			"SP"
		]
	},
	"dependencies": {},
	"patches": {
		"Angle": {
			"type": "slider",
			"default": "-5",
			"values": {
				"-20": {
					"tilt_angle/-20deg.css": [
						"SP"
					]
				},
				"-15": {
					"tilt_angle/-15deg.css": [
						"SP"
					]
				},
				"-10": {
					"tilt_angle/-10deg.css": [
						"SP"
					]
				},
				"-5": {
					"tilt_angle/-5deg.css": [
						"SP"
					]
				},
				"5": {
					"tilt_angle/5deg.css": [
						"SP"
					]
				},
				"10": {
					"tilt_angle/10deg.css": [
						"SP"
					]
				},
				"15": {
					"tilt_angle/15deg.css": [
						"SP"
					]
				},
				"20": {
					"tilt_angle/20deg.css": [
						"SP"
					]
				}
			},
			"components": []
		},
		"Darken portraits": {
			"type": "checkbox",
			"default": "Yes",
			"values": {
				"Yes": {
					"darkerportraits.css": [
						"SP"
					]
				},
				"No": {}
			},
			"components": []
		},
		"Straight images": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"straightimages.css": [
						"SP"
					]
				},
				"No": {}
			},
		"Tilt Method": {
			"type": "dropdown",
			"default": "One Way",
			"values": {
				"One Way": {
					"tilt-oneway.css": [
						"SP"
					]
				},
				"Opposites": {
					"tilt-opposite.css": [
						"SP"
					]
				}
			},	
			"components": []
		}
	}
}